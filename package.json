{
  "name": "tsboilerplate",
  "version": "1.0.0",
  "description": "typescript setup for nodejs projects",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "rimraf ./build && tsc",
    "prod": "npm run build && node build/index.js",
    "watch": "nodemon"
  },
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "author": "Adel Mahjoub",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.6",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}